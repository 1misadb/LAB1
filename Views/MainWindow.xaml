<Page x:Class="LAB1.Views.MainWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LAB1.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainWindow">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="BooksGrid" Grid.Row="0" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" Margin="0 0 0 10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Артикул" Binding="{Binding Article}" Width="*"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Title}" Width="2*"/>
                <DataGridTextColumn Header="Жанр" Binding="{Binding Genre}" Width="*"/>
                <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="2*"/>
                <DataGridTextColumn Header="Дата" Binding="{Binding ReleaseDate}" Width="*"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0 5">
            <Button Content="Добавить" Width="100" Margin="0 0 5 0" Click="Add_Click"/>
            <Button Content="Изменить" Width="100" Margin="0 0 5 0" Click="Edit_Click"/>
            <Button Content="Удалить" Width="100" Margin="0 0 5 0" Click="Delete_Click"/>
            <Button Content="Выдать" Width="100" Margin="0 0 5 0" Click="Issue_Click"/>
            <Button Content="Списать" Width="100" Click="Return_Click"/>
        </StackPanel>
    </Grid>
</Page>
